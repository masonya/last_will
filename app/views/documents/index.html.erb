
<section class="main">

  <p id="notice"><%= notice %></p>
  <h1 class="section_header">Документы</h1>

  <section class="cards_area">
    <% @documents.each do |document| %>
      <div class="card">
        <div class="previev"></div>
        <div class="card_title">
          <h3><%= document.title %></h3>
        </div>
        <%#= link_to 'Открыть', document %>
        <div class="edit">
          <%= link_to '', edit_document_path(document) %>
        </div>
        <div class="delete">
          <%= link_to '', document, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    <% end %>

    <div class="card">
      <div class="card_new">
        <%= link_to '', new_document_path %>
      </div>
      <div class="add">
      </div>
    </div>
  </section>
</section>
